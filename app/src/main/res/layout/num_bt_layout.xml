<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/num_bt_minus"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="-"
        android:background="@drawable/num_bt_left_bg"
        app:layout_constraintEnd_toStartOf="@+id/num_et_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num_et_number"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:background="@drawable/num_et_bg"
        android:inputType="number"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/num_bt_minus"
        app:layout_constraintEnd_toStartOf="@+id/num_bt_add"
        app:layout_constraintStart_toEndOf="@+id/num_bt_minus"
        app:layout_constraintTop_toTopOf="@+id/num_bt_minus" />

    <Button
        android:id="@+id/num_bt_add"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/num_bt_right_bg"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/num_et_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_et_number"
        app:layout_constraintTop_toTopOf="@+id/num_et_number" />

</androidx.constraintlayout.widget.ConstraintLayout>